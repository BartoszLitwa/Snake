<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.Controller.MainPageController">
    <children>
        <Label text="Snake Game Created">
         <font>
            <Font size="40.0" />
         </font></Label>
      <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../images/head_down.png" />
         </image>
      </ImageView>
      <Label text="by Bartosz Litwa">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Button fx:id="btnNewGame" onMouseClicked="#StartNewGame" prefHeight="25.0" prefWidth="160.0" text="New Game" />
      <Button fx:id="btnOpenHighScoresPage" onMouseClicked="#OpenHighScoresPage" prefHeight="25.0" prefWidth="160.0" text="High Scores" />
      <Button fx:id="btnExitGame" onMouseClicked="#ExitGame" prefHeight="25.0" prefWidth="160.0" text="Exit" />
    </children>
</VBox>
